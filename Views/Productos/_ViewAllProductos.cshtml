@model List<Producto>



<a class="btn btn-success" asp-action="Create">Nuevo Producto</a>

<hr style="visibility:hidden" />


<table class="table" id="Productos">
    <thead>
        <tr>
            <th>Cosigo</th>

            <th>Nombre</th>

            <th>Cantidad</th>

            <th>Acciones</th>

        </tr>

    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@Html.DisplayFor(p=>producto.ProductoId) </td>

                <td>@Html.DisplayFor(p=>producto.ProductoDesc) </td>

                <td>@Html.DisplayFor(p=>producto.ProductoCan) </td>

                <td>
                   
                    <a onclick="showInPopup('@Url.Action("Edit", "Productos", new { ProductoId = producto.ProductoId}, Context.Request.Scheme)' , 'Actualizar Almacen')" class="btn btn-outline-warning"><i style="font-size: 1rem" class="bi bi-pencil-square"></i></a>
                  
                    <button data-id="@producto.ProductoId" class="btn btn-outline-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i style="font-size: 1rem" class="bi bi-trash"></i></button>
                </td>
            </tr>

        }
    </tbody>
</table>